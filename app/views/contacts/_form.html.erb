<%= form_for @contact do |f| %>
  <%= render 'shared/contact_errors' %>

  <form class="contact-form">
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-name validat', placeholder: 'Name' %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-email validate validate-email', placeholder: 'Email Address' %>
    </div>

    <div>
      <%= f.label :message %>
      <%= f.text_area :message, class: 'form-message validat', placeholder: 'Message' %>
    </div>

    <div>
      <%= f.submit 'Send' %>
    </div>

  </form>
<% end %>
